# Stop ssh-agent if it is started
[[ -n "$SSH_AUTH_SOCK" ]] &&
    eval "$(ssh-agent -k)"

# Kill remaining unnecessary processes with SIGTERM
PROCESSES=("systemd" "sd-pam" "usbguard-notifier" "ssh-agent" "dbus-daemon" "gnome-keyring-d" "dconf-service" "at-spi-bus-laun" "gvfsd" "at-spi2-registr" "aa-notify" "pipewire" "wireplumber")
for process in "${PROCESSES[@]}"; do
    pkill -u $UID "${process}"
done

swaymsg exit
